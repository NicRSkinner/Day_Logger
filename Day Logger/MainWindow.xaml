<Window x:Class="Day_Logger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Day_Logger"
        Title="MainWindow" Height="750" Width="1500">
    <Window.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="txtTemplateStart">
                <TextBox Width="87" IsReadOnly="True" MouseDoubleClick="OnText_DoubleClick" LostFocus="OnText_LostFocus" Background="WhiteSmoke">
                    <Binding Path="STime"/>
                </TextBox>
            </DataTemplate>
            <DataTemplate x:Key="txtTemplateEnd">
                <TextBox Width="87" IsReadOnly="True" MouseDoubleClick="OnText_DoubleClick" LostFocus="OnText_LostFocus" Background="WhiteSmoke">
                    <Binding Path="ETime"/>
                </TextBox>
            </DataTemplate>
            <DataTemplate x:Key="txtTemplateDur">
                <TextBox Width="87" IsReadOnly="True" MouseDoubleClick="OnText_DoubleClick" LostFocus="OnText_LostFocus" Background="WhiteSmoke">
                    <Binding Path="Duration"/>
                </TextBox>
            </DataTemplate>
            <DataTemplate x:Key="txtTemplateSta">
                <TextBox Width="487" IsReadOnly="True" MouseDoubleClick="OnText_DoubleClick" LostFocus="OnText_LostFocus" Background="WhiteSmoke">
                    <Binding Path="Status"/>
                </TextBox>
            </DataTemplate>
            <DataTemplate x:Key="txtTemplateDes" >
                <TextBox Width="487" IsReadOnly="True" MouseDoubleClick="OnText_DoubleClick" LostFocus="OnText_LostFocus" Background="WhiteSmoke">
                    <Binding Path="Description"/>
                </TextBox>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="606"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="OnNew_Click"/>
                    <MenuItem Header="_Open" Click="OnOpen_Click"/>
                    <MenuItem Header="_Save"  Click="OnSave_Click"/>
                    <MenuItem Header="_Save As"/>
                    <MenuItem Header="_Exit" Click="OnExit_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="77"/>
                <ColumnDefinition Width="92"/>
                <ColumnDefinition Width="72"/>
                <ColumnDefinition Width="92"/>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="179"/>
                <ColumnDefinition Width="1028"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Margin="10,10,0,0" Content="Start Time:" />
            <TextBox x:Name="txtStartTime" Grid.Column="1" Margin="0,10,0,2" />
            <Label Grid.Column="2" Margin="10,10,0,0" Content="End Time:" />
            <TextBox x:Name="txtEndTime" Grid.Column="3" Margin="0,10,0,2" />
            <Label Grid.Column="4" Margin="10,9,0,1" Content="Status:" />
            <ComboBox x:Name="cStatusBox" Grid.Column="5" HorizontalAlignment="Left" Margin="0,9,0,0" VerticalAlignment="Top" Width="179" Height="25">
                <ComboBoxItem Content="" />
                <ComboBoxItem Content="Away From Desk" />
                <ComboBoxItem Content="At Lunch" />
                <ComboBoxItem Content="Down-Time" />
                <ComboBoxItem Content="In a Meeting" />
                <ComboBoxItem Content="On Break" />
                <ComboBoxItem Content="Opened Software" />
                <ComboBoxItem Content="Phone Interaction" />
                <ComboBoxItem Content="Special Projects" />
                <ComboBoxItem Content="Tech II Time" />
                <ComboBoxItem Content="Working on E-mail" />
            </ComboBox>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="135"/>
                <ColumnDefinition Width="135"/>
                <ColumnDefinition Width="135"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnAddStamp" Grid.Column="0" Margin="10,9,0,0" Content="+ Add Timestamp" Click="btnAddStamp_Click" />
            <Button x:Name="btnRemoveStamp" Grid.Column="1" Margin="0,9,0,0" Content="- Remove Timestamp" Height="25" VerticalAlignment="Top" Click="btnRemoveStamp_Click" IsHitTestVisible="True" />
        </Grid>
        <ListView x:Name="lvStamps" Margin="10,10,10,-10" Grid.Row="3">
            <ListView.View>
                <GridView>
                    <GridViewColumn x:Name="txtStart" Width="100" Header="Start Time" CellTemplate="{StaticResource txtTemplateStart}"/>
                    <GridViewColumn x:Name="txtEnd" Width="100" Header="End Time" CellTemplate="{StaticResource txtTemplateEnd}"/>
                    <GridViewColumn x:Name="txtDur" Width="100" Header="Duration" CellTemplate="{StaticResource txtTemplateDur}"/>
                    <GridViewColumn x:Name="txtSta" Width="500" Header="Status" CellTemplate="{StaticResource txtTemplateSta}"/>
                    <GridViewColumn x:Name="txtDes" Width="500" Header="Description" CellTemplate="{StaticResource txtTemplateDes}"/>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Window>
    